<!--pages/personal-info/index.wxml-->
<view class="personal-info-page">
  <view class="info-list">
    <view class="info-item" bindtap="onEditAvatar">
      <text class="label">头像</text>
      <view class="value">
        <image class="avatar" src="{{userInfo.avatar}}" mode="aspectFill" />
        <text class="arrow">></text>
      </view>
    </view>

    <view class="info-item" bindtap="onEditNickname">
      <text class="label">昵称</text>
      <view class="value">
        <text class="text">{{userInfo.nickname}}</text>
        <text class="arrow">></text>
      </view>
    </view>

    <view class="info-item">
      <text class="label">手机号</text>
      <view class="value">
        <text class="text">{{userInfo.phone}}</text>
      </view>
    </view>

    <view class="info-item" bindtap="onEditGender">
      <text class="label">性别</text>
      <view class="value">
        <text class="text">{{userInfo.gender}}</text>
        <text class="arrow">></text>
      </view>
    </view>

    <view class="info-item" bindtap="onEditBirthday">
      <text class="label">生日</text>
      <view class="value">
        <text class="text">{{userInfo.birthday}}</text>
        <text class="arrow">></text>
      </view>
    </view>
  </view>
</view>